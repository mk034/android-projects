<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- 그리드 (재료 목록) -->
        <GridLayout
            android:id="@+id/ingredient_grid"
            android:layout_width="380dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:alignmentMode="alignMargins"
            android:columnCount="4"
            android:columnOrderPreserved="false"
            android:padding="5dp">

            <!-- 재료 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="15dp">

                <FrameLayout
                    android:layout_width="62dp"
                    android:layout_height="62dp">

                    <!-- 재료 이미지 -->
                    <ImageButton
                        android:id="@+id/iv_milk"
                        android:layout_width="36dp"
                        android:layout_height="58dp"
                        android:layout_gravity="center"
                        android:background="@drawable/it_milk" />
                </FrameLayout>

                <!-- 우유 -->
                <TextView
                    android:id="@+id/tv_carrot"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:gravity="center"
                    android:text="우유"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="15dp">

                <FrameLayout
                    android:layout_width="62dp"
                    android:layout_height="62dp">

                    <ImageButton
                        android:id="@+id/iv_yogurt"
                        android:layout_width="48dp"
                        android:layout_height="55dp"
                        android:layout_gravity="center"
                        android:background="@drawable/it_yogurt" />
                </FrameLayout>

                <TextView
                    android:id="@+id/tv_paprika"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:gravity="center"
                    android:text="요거트"
                    android:textSize="12sp" />
            </LinearLayout>

            <!-- 치즈 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="15dp">

                <FrameLayout
                    android:layout_width="62dp"
                    android:layout_height="62dp">

                    <ImageButton
                        android:id="@+id/iv_cheese"
                        android:layout_width="50dp"
                        android:layout_height="45dp"
                        android:layout_gravity="center"
                        android:background="@drawable/it_cheese" />
                </FrameLayout>

                <TextView
                    android:id="@+id/tv_eggplant"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:gravity="center"
                    android:text="치즈"
                    android:textSize="12sp" />
            </LinearLayout>

            <!-- 두유 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="15dp">

                <FrameLayout
                    android:layout_width="62dp"
                    android:layout_height="62dp">

                    <ImageButton
                        android:id="@+id/iv_soymilk"
                        android:layout_width="36dp"
                        android:layout_height="58dp"
                        android:layout_gravity="center"
                        android:background="@drawable/it_milk" />
                </FrameLayout>

                <TextView
                    android:id="@+id/tv_soymilk"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:gravity="center"
                    android:text="두유"
                    android:textSize="12sp" />
            </LinearLayout>

            <!-- 마가린 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="15dp">

                <FrameLayout
                    android:layout_width="62dp"
                    android:layout_height="62dp">

                    <ImageButton
                        android:id="@+id/iv_margarine"
                        android:layout_width="53dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:background="@drawable/it_margarine" />
                </FrameLayout>

                <TextView
                    android:id="@+id/tv_margarine"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:gravity="center"
                    android:text="마가린"
                    android:textSize="12sp" />
            </LinearLayout>

            <!-- 버터 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="15dp">

                <FrameLayout
                    android:layout_width="62dp"
                    android:layout_height="62dp">

                    <ImageButton
                        android:id="@+id/iv_butter"
                        android:layout_width="58dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:background="@drawable/it_butter" />
                </FrameLayout>

                <TextView
                    android:id="@+id/tv_butter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:gravity="center"
                    android:text="버터"
                    android:textSize="12sp" />
            </LinearLayout>

            <!-- 아몬드 우유 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="15dp">

                <FrameLayout
                    android:layout_width="62dp"
                    android:layout_height="62dp">

                    <ImageButton
                        android:id="@+id/iv_almondmilk"
                        android:layout_width="36dp"
                        android:layout_height="55dp"
                        android:layout_gravity="center"
                        android:background="@drawable/it_milk" />
                </FrameLayout>

                <TextView
                    android:id="@+id/tv_almondmilk"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:gravity="center"
                    android:text="아몬드 우유"
                    android:textSize="12sp" />
            </LinearLayout>

            <!-- 그릭 요거트 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="15dp">

                <FrameLayout
                    android:layout_width="62dp"
                    android:layout_height="62dp">

                    <ImageButton
                        android:id="@+id/iv_greekyogurt"
                        android:layout_width="48dp"
                        android:layout_height="55dp"
                        android:layout_gravity="center"
                        android:background="@drawable/it_yogurt" />
                </FrameLayout>

                <TextView
                    android:id="@+id/tv_greekyogurt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:gravity="center"
                    android:text="그릭 요거트"
                    android:textSize="12sp" />
            </LinearLayout>


        </GridLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>