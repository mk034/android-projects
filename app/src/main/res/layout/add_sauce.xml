<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <GridLayout
            android:id="@+id/ingredient_grid"
            android:layout_width="380dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:alignmentMode="alignMargins"
            android:columnCount="4"
            android:columnOrderPreserved="false"
            android:padding="5dp">

            <!-- 케첩 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="15dp">

                <FrameLayout
                    android:layout_width="62dp"
                    android:layout_height="62dp">

                    <!-- 재료 이미지 -->
                    <ImageButton
                        android:id="@+id/iv_ketchup"
                        android:layout_width="33dp"
                        android:layout_height="58dp"
                        android:layout_gravity="center"
                        android:background="@drawable/it_ketchup" />
                </FrameLayout>

                <!-- 재료 이름 -->
                <TextView
                    android:id="@+id/tv_carrot"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:gravity="center"
                    android:text="케첩"
                    android:textSize="12sp" />
            </LinearLayout>

            <!-- 마요네즈 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="15dp">

                <FrameLayout
                    android:layout_width="62dp"
                    android:layout_height="62dp">

                    <ImageButton
                        android:id="@+id/iv_mayonnaise"
                        android:layout_width="57dp"
                        android:layout_height="57dp"
                        android:layout_gravity="center"
                        android:background="@drawable/it_mayonnaise" />
                </FrameLayout>

                <TextView
                    android:id="@+id/tv_paprika"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:gravity="center"
                    android:text="마요네즈"
                    android:textSize="12sp" />
            </LinearLayout>

            <!-- 머스타드 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="15dp">

                <FrameLayout
                    android:layout_width="62dp"
                    android:layout_height="62dp">

                    <ImageButton
                        android:id="@+id/iv_mustard"
                        android:layout_width="55dp"
                        android:layout_height="60dp"
                        android:layout_gravity="center"
                        android:background="@drawable/it_mustard" />

                </FrameLayout>

                <TextView
                    android:id="@+id/tv_eggplant"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:gravity="center"
                    android:text="머스타드"
                    android:textSize="12sp" />
            </LinearLayout>

            <!-- 바베큐 소스 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="15dp">

                <FrameLayout
                    android:layout_width="62dp"
                    android:layout_height="62dp">

                    <ImageButton
                        android:id="@+id/iv_bbq"
                        android:layout_width="50dp"
                        android:layout_height="49dp"
                        android:layout_gravity="center"
                        android:background="@drawable/it_bbq" />
                </FrameLayout>

                <TextView
                    android:id="@+id/tv_onion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:gravity="center"
                    android:text="바베큐 소스"
                    android:textSize="12sp"/>
            </LinearLayout>

            <!-- 핫소스 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="15dp">

                <FrameLayout
                    android:layout_width="62dp"
                    android:layout_height="62dp">

                    <ImageButton
                        android:id="@+id/iv_hot"
                        android:layout_width="55dp"
                        android:layout_height="60dp"
                        android:layout_gravity="center"
                        android:background="@drawable/it_hot" />
                </FrameLayout>

                <TextView
                    android:id="@+id/tv_hot"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:gravity="center"
                    android:text="핫소스"
                    android:textSize="12sp" />
            </LinearLayout>

            <!-- 간장 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="15dp">

                <FrameLayout
                    android:layout_width="62dp"
                    android:layout_height="62dp">

                    <ImageButton
                        android:id="@+id/iv_soysauce"
                        android:layout_width="35dp"
                        android:layout_height="57dp"
                        android:layout_gravity="center"
                        android:background="@drawable/it_soysauce" />
                </FrameLayout>

                <TextView
                    android:id="@+id/tv_soysauce"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:gravity="center"
                    android:text="간장"
                    android:textSize="12sp" />
            </LinearLayout>

            <!-- 참기름 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="15dp">

                <FrameLayout
                    android:layout_width="62dp"
                    android:layout_height="62dp">

                    <ImageButton
                        android:id="@+id/iv_sesameoil"
                        android:layout_width="55dp"
                        android:layout_height="60dp"
                        android:layout_gravity="center"
                        android:background="@drawable/it_sesameoil" />
                </FrameLayout>

                <TextView
                    android:id="@+id/tv_sesameoil"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:gravity="center"
                    android:text="참기름"
                    android:textSize="12sp" />
            </LinearLayout>

            <!-- 소금 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="15dp">

                <FrameLayout
                    android:layout_width="62dp"
                    android:layout_height="62dp">

                    <ImageButton
                        android:id="@+id/iv_salt"
                        android:layout_width="55dp"
                        android:layout_height="60dp"
                        android:layout_gravity="center"
                        android:background="@drawable/it_salt" />
                </FrameLayout>

                <TextView
                    android:id="@+id/tv_salt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:gravity="center"
                    android:text="소금"
                    android:textSize="12sp" />
            </LinearLayout>

            <!-- 설탕 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="15dp">

                <FrameLayout
                    android:layout_width="62dp"
                    android:layout_height="62dp">

                    <ImageButton
                        android:id="@+id/iv_sugar"
                        android:layout_width="55dp"
                        android:layout_height="60dp"
                        android:layout_gravity="center"
                        android:background="@drawable/it_sugar" />
                </FrameLayout>

                <TextView
                    android:id="@+id/tv_sugar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:gravity="center"
                    android:text="설탕"
                    android:textSize="12sp" />
            </LinearLayout>

            <!-- 고추장 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="15dp">

                <FrameLayout
                    android:layout_width="62dp"
                    android:layout_height="62dp">

                    <ImageButton
                        android:id="@+id/iv_gochujang"
                        android:layout_width="33dp"
                        android:layout_height="60dp"
                        android:layout_gravity="center"
                        android:background="@drawable/it_gochujang" />
                </FrameLayout>

                <TextView
                    android:id="@+id/tv_gochujang"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:gravity="center"
                    android:text="고추장"
                    android:textSize="12sp" />
            </LinearLayout>

            <!-- 굴소스 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="15dp">

                <FrameLayout
                    android:layout_width="62dp"
                    android:layout_height="62dp">

                    <ImageButton
                        android:id="@+id/iv_oyster"
                        android:layout_width="23dp"
                        android:layout_height="60dp"
                        android:layout_gravity="center"
                        android:background="@drawable/it_oyster" />
                </FrameLayout>

                <TextView
                    android:id="@+id/tv_oyster"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:gravity="center"
                    android:text="굴소스"
                    android:textSize="12sp" />
            </LinearLayout>

            <!-- 고춧가루 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="15dp">

                <FrameLayout
                    android:layout_width="62dp"
                    android:layout_height="62dp">

                    <ImageButton
                        android:id="@+id/iv_redpepperpowder"
                        android:layout_width="55dp"
                        android:layout_height="60dp"
                        android:layout_gravity="center"
                        android:background="@drawable/it_redpepperpowder" />
                </FrameLayout>

                <TextView
                    android:id="@+id/tv_redpepperpowder"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:gravity="center"
                    android:text="고춧가루"
                    android:textSize="12sp" />
            </LinearLayout>

            <!-- 된장 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="15dp">

                <FrameLayout
                    android:layout_width="62dp"
                    android:layout_height="62dp">

                    <ImageButton
                        android:id="@+id/iv_doenjang"
                        android:layout_width="50dp"
                        android:layout_height="48dp"
                        android:layout_gravity="center"
                        android:background="@drawable/it_paste" />
                </FrameLayout>

                <TextView
                    android:id="@+id/tv_doenjang"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:gravity="center"
                    android:text="된장"
                    android:textSize="12sp" />
            </LinearLayout>

            <!-- 쌈장 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="15dp">

                <FrameLayout
                    android:layout_width="62dp"
                    android:layout_height="62dp">

                    <ImageButton
                        android:id="@+id/iv_ssamjang"
                        android:layout_width="50dp"
                        android:layout_height="48dp"
                        android:layout_gravity="center"
                        android:background="@drawable/it_paste" />
                </FrameLayout>

                <TextView
                    android:id="@+id/tv_ssamjang"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:gravity="center"
                    android:text="쌈장"
                    android:textSize="12sp" />
            </LinearLayout>

            <!-- 카레 가루 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="15dp">

                <FrameLayout
                    android:layout_width="62dp"
                    android:layout_height="62dp">

                    <ImageButton
                        android:id="@+id/iv_currypowder"
                        android:layout_width="55dp"
                        android:layout_height="60dp"
                        android:layout_gravity="center"
                        android:background="@drawable/it_currypowder" />
                </FrameLayout>

                <TextView
                    android:id="@+id/tv_currypowder"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:gravity="center"
                    android:text="카레가루"
                    android:textSize="12sp" />
            </LinearLayout>

            <!-- 샐러드 드레싱 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="15dp">

                <FrameLayout
                    android:layout_width="62dp"
                    android:layout_height="62dp">

                    <ImageButton
                        android:id="@+id/iv_dressing"
                        android:layout_width="50dp"
                        android:layout_height="52dp"
                        android:layout_gravity="center"
                        android:background="@drawable/it_dressing" />
                </FrameLayout>

                <TextView
                    android:id="@+id/tv_dressing"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:gravity="center"
                    android:text="샐러드 드레싱"
                    android:textSize="12sp" />
            </LinearLayout>

            <!-- 피시 소스 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="15dp">

                <FrameLayout
                    android:layout_width="62dp"
                    android:layout_height="62dp">

                    <ImageButton
                        android:id="@+id/iv_fishsauce"
                        android:layout_width="58dp"
                        android:layout_height="55dp"
                        android:layout_gravity="center"
                        android:background="@drawable/it_fishsauce" />
                </FrameLayout>

                <TextView
                    android:id="@+id/tv_fishsauce"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:gravity="center"
                    android:text="피시 소스"
                    android:textSize="12sp" />
            </LinearLayout>

            <!-- 치킨스톡 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="15dp">

                <FrameLayout
                    android:layout_width="62dp"
                    android:layout_height="62dp">

                    <ImageButton
                        android:id="@+id/iv_chicken_seasoning"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_gravity="center"
                        android:background="@drawable/it_chicken_seasoning" />
                </FrameLayout>

                <TextView
                    android:id="@+id/tv_chicken_seasoning"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:gravity="center"
                    android:text="치킨 스톡"
                    android:textSize="12sp" />
            </LinearLayout>

            <!-- 토마토 소스 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="15dp">

                <FrameLayout
                    android:layout_width="62dp"
                    android:layout_height="62dp">

                    <ImageButton
                        android:id="@+id/iv_tomatopaste"
                        android:layout_width="35dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:background="@drawable/it_tomatopaste" />
                </FrameLayout>

                <TextView
                    android:id="@+id/tv_tomatopaste"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:gravity="center"
                    android:text="토마토 소스"
                    android:textSize="12sp" />
            </LinearLayout>
        </GridLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>