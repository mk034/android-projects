<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- 그리드 (재료 목록) -->
        <GridLayout
            android:id="@+id/ingredient_grid"
            android:layout_width="380dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:alignmentMode="alignMargins"
            android:columnCount="4"
            android:columnOrderPreserved="false"
            android:padding="5dp">

            <!-- 재료 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="15dp">

                <FrameLayout
                    android:layout_width="62dp"
                    android:layout_height="62dp">

                    <!-- 재료 이미지 -->
                    <ImageButton
                        android:id="@+id/iv_beef"
                        android:layout_width="35dp"
                        android:layout_height="58dp"
                        android:layout_gravity="center"
                        android:background="@drawable/it_beef" />
                </FrameLayout>

                <!-- 재료 이름 -->
                <TextView
                    android:id="@+id/tv_carrot"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:gravity="center"
                    android:text="소고기"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="15dp">

                <FrameLayout
                    android:layout_width="62dp"
                    android:layout_height="62dp">

                    <ImageButton
                        android:id="@+id/iv_pork"
                        android:layout_width="57dp"
                        android:layout_height="57dp"
                        android:layout_gravity="center"
                        android:background="@drawable/it_pork" />
                </FrameLayout>

                <TextView
                    android:id="@+id/tv_paprika"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:gravity="center"
                    android:text="돼지고기"
                    android:textSize="12sp" />
            </LinearLayout>

            <!-- 닭고기 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="15dp">

                <FrameLayout
                    android:layout_width="62dp"
                    android:layout_height="62dp">

                    <ImageButton
                        android:id="@+id/iv_chicken"
                        android:layout_width="55dp"
                        android:layout_height="60dp"
                        android:layout_gravity="center"
                        android:background="@drawable/it_chicken" />
                </FrameLayout>

                <TextView
                    android:id="@+id/tv_eggplant"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:gravity="center"
                    android:text="닭고기"
                    android:textSize="12sp" />
            </LinearLayout>

            <!-- 양고기 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="15dp">

                <FrameLayout
                    android:layout_width="62dp"
                    android:layout_height="62dp">

                    <ImageButton
                        android:id="@+id/iv_lamb"
                        android:layout_width="50dp"
                        android:layout_height="49dp"
                        android:layout_gravity="center"
                        android:background="@drawable/it_lamb" />
                </FrameLayout>

                <TextView
                    android:id="@+id/tv_onion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:gravity="center"
                    android:text="양고기"
                    android:textSize="12sp"/>
            </LinearLayout>

            <!-- 햄 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="15dp">

                <FrameLayout
                    android:layout_width="62dp"
                    android:layout_height="62dp">

                    <ImageButton
                        android:id="@+id/iv_ham"
                        android:layout_width="49dp"
                        android:layout_height="47dp"
                        android:layout_gravity="center"
                        android:background="@drawable/it_ham" />
                </FrameLayout>

                <TextView
                    android:id="@+id/tv_potato"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:gravity="center"
                    android:text="햄"
                    android:textSize="12sp" />
            </LinearLayout>
            <!-- 소시지 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="15dp">

                <FrameLayout
                    android:layout_width="62dp"
                    android:layout_height="62dp">

                    <ImageButton
                        android:id="@+id/iv_sausage"
                        android:layout_width="49dp"
                        android:layout_height="47dp"
                        android:layout_gravity="center"
                        android:background="@drawable/it_sausage" />
                </FrameLayout>

                <TextView
                    android:id="@+id/tv_sausage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:gravity="center"
                    android:text="소시지"
                    android:textSize="12sp" />
            </LinearLayout>

            <!-- 오리고기 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="15dp">

                <FrameLayout
                    android:layout_width="62dp"
                    android:layout_height="62dp">

                    <ImageButton
                        android:id="@+id/iv_duck"
                        android:layout_width="49dp"
                        android:layout_height="47dp"
                        android:layout_gravity="center"
                        android:background="@drawable/it_duck" />
                </FrameLayout>

                <TextView
                    android:id="@+id/tv_duck"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:gravity="center"
                    android:text="오리고기"
                    android:textSize="12sp" />
            </LinearLayout>

            <!-- 양념고기 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="15dp">

                <FrameLayout
                    android:layout_width="62dp"
                    android:layout_height="62dp">

                    <ImageButton
                        android:id="@+id/iv_marinatedmeat"
                        android:layout_width="49dp"
                        android:layout_height="47dp"
                        android:layout_gravity="center"
                        android:background="@drawable/it_marinatedmeat" />
                </FrameLayout>

                <TextView
                    android:id="@+id/tv_marinatedmeat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:gravity="center"
                    android:text="양념고기"
                    android:textSize="12sp" />
            </LinearLayout>

            <!-- 닭다리 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="15dp">

                <FrameLayout
                    android:layout_width="62dp"
                    android:layout_height="62dp">

                    <ImageButton
                        android:id="@+id/iv_drumsticks"
                        android:layout_width="49dp"
                        android:layout_height="47dp"
                        android:layout_gravity="center"
                        android:background="@drawable/it_drumsticks" />
                </FrameLayout>

                <TextView
                    android:id="@+id/tv_drumsticks"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:gravity="center"
                    android:text="닭다리"
                    android:textSize="12sp" />
            </LinearLayout>

            <!-- 닭가슴살 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="15dp">

                <FrameLayout
                    android:layout_width="62dp"
                    android:layout_height="62dp">

                    <ImageButton
                        android:id="@+id/iv_breast"
                        android:layout_width="49dp"
                        android:layout_height="47dp"
                        android:layout_gravity="center"
                        android:background="@drawable/it_breast" />
                </FrameLayout>

                <TextView
                    android:id="@+id/tv_breast"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:gravity="center"
                    android:text="닭가슴살"
                    android:textSize="12sp" />
            </LinearLayout>

            <!-- 베이컨 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="15dp">

                <FrameLayout
                    android:layout_width="62dp"
                    android:layout_height="62dp">

                    <ImageButton
                        android:id="@+id/iv_bacon"
                        android:layout_width="49dp"
                        android:layout_height="47dp"
                        android:layout_gravity="center"
                        android:background="@drawable/it_bacon" />
                </FrameLayout>

                <TextView
                    android:id="@+id/tv_bacon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:gravity="center"
                    android:text="베이컨"
                    android:textSize="12sp" />
            </LinearLayout>
        </GridLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>