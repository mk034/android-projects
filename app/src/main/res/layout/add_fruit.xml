<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- 그리드 (재료 목록) -->
        <GridLayout
            android:id="@+id/ingredient_grid"
            android:layout_width="380dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:alignmentMode="alignMargins"
            android:columnCount="4"
            android:columnOrderPreserved="false"
            android:padding="5dp">

            <!-- 재료 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="15dp">

                <FrameLayout
                    android:layout_width="62dp"
                    android:layout_height="62dp">

                    <!-- 재료 이미지 -->
                    <ImageButton
                        android:id="@+id/iv_apple"
                        android:layout_width="44dp"
                        android:layout_height="55dp"
                        android:layout_gravity="center"
                        android:background="@drawable/it_apple" />
                </FrameLayout>

                <!-- 재료 이름 -->
                <TextView
                    android:id="@+id/tv_carrot"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:gravity="center"
                    android:text="사과"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="15dp">

                <FrameLayout
                    android:layout_width="62dp"
                    android:layout_height="62dp">

                    <ImageButton
                        android:id="@+id/iv_strawberry"
                        android:layout_width="46dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:background="@drawable/it_strawberry" />
                </FrameLayout>

                <TextView
                    android:id="@+id/tv_strawberry"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:gravity="center"
                    android:text="딸기"
                    android:textSize="12sp" />
            </LinearLayout>

            <!-- 복숭아 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="15dp">

                <FrameLayout
                    android:layout_width="62dp"
                    android:layout_height="62dp">

                    <ImageButton
                        android:id="@+id/iv_peach"
                        android:layout_width="57dp"
                        android:layout_height="55dp"
                        android:layout_gravity="center"
                        android:background="@drawable/it_peach" />
                </FrameLayout>

                <TextView
                    android:id="@+id/tv_eggplant"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:gravity="center"
                    android:text="복숭아"
                    android:textSize="12sp" />
            </LinearLayout>

            <!-- 오렌지 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="15dp">

                <FrameLayout
                    android:layout_width="62dp"
                    android:layout_height="62dp">

                    <ImageButton
                        android:id="@+id/iv_orange"
                        android:layout_width="43dp"
                        android:layout_height="52dp"
                        android:layout_gravity="center"
                        android:background="@drawable/it_orange" />
                </FrameLayout>

                <TextView
                    android:id="@+id/tv_orange"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:gravity="center"
                    android:text="오렌지"
                    android:textSize="12sp"/>
            </LinearLayout>

            <!-- 포도 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="15dp">

                <FrameLayout
                    android:layout_width="62dp"
                    android:layout_height="62dp">

                    <ImageButton
                        android:id="@+id/iv_grape"
                        android:layout_width="52dp"
                        android:layout_height="49dp"
                        android:layout_gravity="center"
                        android:background="@drawable/it_grape" />
                </FrameLayout>

                <TextView
                    android:id="@+id/tv_potato"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:gravity="center"
                    android:text="포도"
                    android:textSize="12sp" />
            </LinearLayout>

            <!-- 배 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="15dp">

                <FrameLayout
                    android:layout_width="62dp"
                    android:layout_height="62dp">

                    <ImageButton
                        android:id="@+id/iv_pear"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:background="@drawable/it_pear" />
                </FrameLayout>

                <TextView
                    android:id="@+id/tv_swpotato"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:gravity="center"
                    android:text="배"
                    android:textSize="12sp" />
            </LinearLayout>

            <!-- 바나나 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="15dp">

                <FrameLayout
                    android:layout_width="62dp"
                    android:layout_height="62dp">

                    <ImageButton
                        android:id="@+id/iv_banana"
                        android:layout_width="47dp"
                        android:layout_height="47dp"
                        android:layout_gravity="center"
                        android:background="@drawable/it_banana" />
                </FrameLayout>

                <TextView
                    android:id="@+id/tv_banana"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:gravity="center"
                    android:text="바나나"
                    android:textSize="12sp" />
            </LinearLayout>

            <!-- 체리 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="15dp">

                <FrameLayout
                    android:layout_width="62dp"
                    android:layout_height="62dp">

                    <ImageButton
                        android:id="@+id/iv_cherry"
                        android:layout_width="49dp"
                        android:layout_height="48dp"
                        android:layout_gravity="center"
                        android:background="@drawable/it_cherry" />
                </FrameLayout>

                <TextView
                    android:id="@+id/tv_cherry"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:gravity="center"
                    android:text="체리"
                    android:textSize="12sp" />
            </LinearLayout>

            <!-- 망고 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="15dp">

                <FrameLayout
                    android:layout_width="62dp"
                    android:layout_height="62dp">

                    <ImageButton
                        android:id="@+id/iv_mango"
                        android:layout_width="49dp"
                        android:layout_height="44dp"
                        android:layout_gravity="center"
                        android:background="@drawable/it_mango" />
                </FrameLayout>

                <TextView
                    android:id="@+id/tv_garlic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:gravity="center"
                    android:text="망고"
                    android:textSize="12sp" />
            </LinearLayout>

            <!-- 키위 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="15dp">

                <FrameLayout
                    android:layout_width="62dp"
                    android:layout_height="62dp">

                    <ImageButton
                        android:id="@+id/iv_kiwi"
                        android:layout_width="54dp"
                        android:layout_height="45dp"
                        android:layout_gravity="center"
                        android:background="@drawable/it_kiwi" />
                </FrameLayout>

                <TextView
                    android:id="@+id/tv_kiwi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:gravity="center"
                    android:text="키위"
                    android:textSize="12sp" />
            </LinearLayout>

            <!-- 파인애플 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="15dp">

                <FrameLayout
                    android:layout_width="62dp"
                    android:layout_height="62dp">

                    <ImageButton
                        android:id="@+id/iv_pineapple"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_gravity="center"
                        android:background="@drawable/it_pineapple" />
                </FrameLayout>

                <TextView
                    android:id="@+id/tv_pineapple"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:gravity="center"
                    android:text="파인애플"
                    android:textSize="12sp" />
            </LinearLayout>

            <!-- 수박 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="15dp">

                <FrameLayout
                    android:layout_width="62dp"
                    android:layout_height="62dp">

                    <ImageButton
                        android:id="@+id/iv_watermelon"
                        android:layout_width="49dp"
                        android:layout_height="49dp"
                        android:layout_gravity="center"
                        android:background="@drawable/it_watermelon" />
                </FrameLayout>

                <TextView
                    android:id="@+id/tv_watermelon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:gravity="center"
                    android:text="수박"
                    android:textSize="12sp" />
            </LinearLayout>
        </GridLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>